pragma solidity ^0.8.20;

import {Test} from "forge-std/Test.sol";
import {RouterLib} from "../../src/libraries/RouterLib.sol";

contract WrapperRouterLibTest {
    function createV4Command(address currencyIn, address currencyOut, uint256 amountIn, address pumHook)
        public
        view
        returns (bytes memory)
    {
        return RouterLib.createV4Command(currencyIn, currencyOut, amountIn, pumHook);
    }
}

contract RouterLibTest is Test {
    WrapperRouterLibTest wrapper;

    function setUp() public {
        wrapper = new WrapperRouterLibTest();
    }

    function test_createV4Plan() public {
        bytes memory plan = wrapper.createV4Command(address(1), address(2), 100, address(3));
        assertEq(
            plan,
            hex""
        );
    }
}
